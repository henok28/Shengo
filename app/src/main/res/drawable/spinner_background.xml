<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <stroke android:width="2dp" android:color="@android:color/black"/> <!-- Black border -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Dropdown icon padding area -->
    <item android:end="10dp"/>
</layer-list>
