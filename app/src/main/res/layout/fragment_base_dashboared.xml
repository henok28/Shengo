<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"





    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="10dp"
        android:layout_marginBottom="0dp"


        >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"



            >

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/profile"




                />

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:text="Hello, User"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"




                />

        </RelativeLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:src="@drawable/magnifyingglass"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:id="@+id/header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"

            android:text="Legal Help, Your Way"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header1"
            android:textSize="39sp"
            android:textColor="@color/black"
            android:text="Find Top Class\nLawyers"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <!-- Horizontal Scroll View -->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <!-- Container for the Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Filter Buttons with Rounded Corners -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real Estate Lawyers"
                    android:textColor="@color/black"
                    android:backgroundTint="#7cd6b5"

                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criminal Lawyers"
                    android:textColor="@color/black"
                    android:backgroundTint="#7cd6b5"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Lawyers"
                    android:textColor="@color/black"
                    android:backgroundTint="#7cd6b5"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Lawyers"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDE8DC"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Lawyers"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDE8DC"
                    android:layout_marginEnd="8dp" />

                <!-- Add more buttons as needed -->
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"

        >

        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/bg"
            android:id="@+id/lawyersrecycler"
            android:layout_width="match_parent"
            android:layout_height="400dp"

            />


    </RelativeLayout>





</LinearLayout>