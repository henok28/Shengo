<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:background="@drawable/dialog_background"
    android:padding="10dp">

    <!-- English Option -->
    <LinearLayout
        android:id="@+id/englishOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:clickable="true"
        android:layout_gravity="start"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Spacer to push the checkmark to the end -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Checkmark ImageView (initially hidden) -->
        <ImageView
            android:id="@+id/englishCheck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
             />
    </LinearLayout>

    <!-- Amharic Option -->
    <LinearLayout
        android:id="@+id/amharicOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="start"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Amharic"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Spacer to push the checkmark to the end -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Checkmark ImageView (initially hidden) -->
        <ImageView
            android:id="@+id/amharicCheck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
         />
    </LinearLayout>
</LinearLayout>
