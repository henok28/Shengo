<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/otpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:labelFor="@id/otpLabel">

        <EditText
            android:id="@+id/otpBox1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:importantForAccessibility="no"
            android:contentDescription="OTP digit 1"
            android:nextFocusForward="@+id/otpBox2" />

        <EditText
            android:id="@+id/otpBox2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:importantForAccessibility="no"
            android:contentDescription="OTP digit 2"
            android:nextFocusForward="@+id/otpBox3" />

        <EditText
            android:id="@+id/otpBox3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:importantForAccessibility="no"
            android:contentDescription="OTP digit 3"
            android:nextFocusForward="@+id/otpBox4" />

        <EditText
            android:id="@+id/otpBox4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:importantForAccessibility="no"
            android:contentDescription="OTP digit 4"
            android:nextFocusForward="@+id/otpBox5" />

        <EditText
            android:id="@+id/otpBox5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:importantForAccessibility="no"
            android:contentDescription="OTP digit 5"
            android:nextFocusForward="@+id/otpBox6" />

        <EditText
            android:id="@+id/otpBox6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:importantForAccessibility="no"
            android:contentDescription="OTP digit 6" />

    </LinearLayout>

    <TextView
        android:id="@+id/resendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t receive the OTP? Resend"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:minHeight="48dp"
        android:minWidth="48dp"
        />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#465458"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"/>

</LinearLayout>